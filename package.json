{
    "name": "repo-extract",
    "version": "0.2.0",
    "description": "CLI tool to analyze and create text dumps of codebases for LLMs",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "bin": {
        "repo-extract": "dist/cli.js"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "tsc",
        "cli": "node dist/cli.js",
        "dev": "ts-node src/cli.ts",
        "test": "vitest",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "git",
        "llm",
        "code-analysis",
        "repository",
        "text-dump",
        "cli"
    ],
    "author": "Samuel Fernandez",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SamuelFerfort/repo-extract.git"
    },
    "dependencies": {
        "commander": "^11.1.0",
        "glob": "^10.3.10",
        "gpt-tokenizer": "^2.1.2",
        "minimatch": "^10.0.1",
        "simple-git": "^3.22.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@vitest/coverage-v8": "^2.1.8",
        "ts-node": "^10.9.1",
        "typescript": "^5.3.2",
        "vitest": "^2.1.8"
    }
}
